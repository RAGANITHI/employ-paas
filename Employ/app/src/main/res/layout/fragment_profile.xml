<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    tools:context=".Fragments.ProfileFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/hello"
                android:id="@+id/hellotext"
                android:textSize="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"

                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/faheem_jinna"
                android:layout_below="@+id/hellotext"
                android:textSize="30dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="-10dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content">

            </TextView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_alignParentEnd="true"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                android:id="@+id/profiles"
                app:cardElevation="5dp"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/employ"
                    android:id="@+id/profilepic"
                    android:layout_height="match_parent">

                </ImageView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/profiles"
                android:layout_margin="20dp"
                android:id="@+id/skills"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="#ad90c3"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/develop_your_skills"
                        android:textColor="@color/appcolor"
                        android:id="@+id/develop"
                        android:layout_toRightOf="@+id/percentage"
                        android:textSize="20dp"
                        android:layout_margin="20dp"

                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="0%"
                        android:background="@drawable/percentstyle"
                        android:id="@+id/percentage"
                        android:textSize="20dp"
                        android:textColor="@color/appcolor"
                        android:layout_centerVertical="true"
                        android:padding="20dp"

                        android:layout_height="wrap_content">

                    </TextView>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:id="@+id/jobsapplied"
                android:layout_below="@+id/skills"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="#1CB0C1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="100"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_centerVertical="true"

                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/jobs_applied"
                        android:textColor="@android:color/white"
                        android:layout_toRightOf="@+id/percentage"
                        android:textSize="20dp"

                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:id="@+id/selected"
                android:layout_below="@+id/skills"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/jobsapplied"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="#842859"
               >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="20"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_centerVertical="true"

                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/selected"
                        android:textColor="@android:color/white"
                        android:layout_toRightOf="@+id/percentage"
                        android:textSize="20dp"

                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:id="@+id/experience"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/selected"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="#FEB22A"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="5 yrs"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_centerVertical="true"

                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/experience"
                        android:textColor="@android:color/white"
                        android:layout_toRightOf="@+id/percentage"
                        android:textSize="20dp"

                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/selected"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/jobsapplied"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="#295973"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="12"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_centerVertical="true"

                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/projects"
                        android:textColor="@android:color/white"
                        android:layout_toRightOf="@+id/percentage"
                        android:textSize="20dp"

                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/job_history"
                android:layout_below="@+id/experience"
                android:layout_margin="20dp"
                android:id="@+id/jobhistory"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content">

            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/recyclerjobhistory"
                android:nestedScrollingEnabled="false"
                android:layout_below="@+id/jobhistory"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>






        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>



</LinearLayout>