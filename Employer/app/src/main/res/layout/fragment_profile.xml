<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProfileFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:text="Hello,"
                android:id="@+id/hellotext"
                android:textSize="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"

                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="Burger King"
                android:layout_below="@+id/hellotext"
                android:textSize="30dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="-10dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content">

            </TextView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_alignParentEnd="true"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                android:id="@+id/profiles"
                app:cardElevation="5dp"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/employ"
                    android:id="@+id/profilepic"
                    android:layout_height="match_parent">

                </ImageView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/profiles"
                android:layout_margin="20dp"
                android:id="@+id/skills"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="#ad90c3"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Application remaining"
                        android:textColor="@color/appcolor"
                        android:id="@+id/develop"
                        android:layout_toRightOf="@+id/percentage"
                        android:textSize="20dp"
                        android:layout_margin="20dp"

                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="30"
                        android:background="@drawable/percentstyle"
                        android:id="@+id/percentage"
                        android:textSize="20dp"
                        android:textColor="@color/appcolor"
                        android:layout_centerVertical="true"
                        android:padding="20dp"

                        android:layout_height="wrap_content">

                    </TextView>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:id="@+id/jobsapplied"
                android:layout_below="@+id/skills"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="#1CB0C1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="100"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_centerVertical="true"

                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Business"
                        android:textColor="@android:color/white"
                        android:layout_toRightOf="@+id/percentage"
                        android:textSize="20dp"

                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:id="@+id/selected"
                android:layout_below="@+id/skills"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/jobsapplied"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="#842859"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="20"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_centerVertical="true"

                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Job Posts"
                        android:textColor="@android:color/white"
                        android:layout_toRightOf="@+id/percentage"
                        android:textSize="20dp"

                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:id="@+id/experience"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/selected"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="#FEB22A"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="5 yrs"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_centerVertical="true"

                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Experience"
                        android:textColor="@android:color/white"
                        android:layout_toRightOf="@+id/percentage"
                        android:textSize="20dp"

                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/selected"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/jobsapplied"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="#295973"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="12"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_centerVertical="true"

                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Branches"
                        android:textColor="@android:color/white"
                        android:layout_toRightOf="@+id/percentage"
                        android:textSize="20dp"

                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:text="History of orders"
                android:layout_below="@+id/experience"
                android:layout_margin="20dp"
                android:id="@+id/jobhistory"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content">

            </TextView>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_below="@+id/jobhistory"
               android:layout_height="wrap_content">
               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   app:cardCornerRadius="10dp"
                   android:layout_margin="10dp"
                   app:cardElevation="5dp"
                   android:layout_height="200dp">
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <TextView
                           android:layout_width="wrap_content"
                           android:text="150 rs"
                           android:textColor="#25854C"
                           android:textStyle="bold"
                           android:layout_alignParentEnd="true"
                           android:textSize="40dp"
                           android:layout_margin="50dp"
                           android:layout_height="wrap_content"
                           android:layout_alignParentRight="true">

                       </TextView>

                       <ImageView
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:elevation="10dp"
                           android:layout_margin="10dp"
                           android:src="@drawable/employ"
                           android:adjustViewBounds="true"
                           android:scaleType="fitCenter"
                           android:id="@+id/recommendationimage1"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_toRightOf="@+id/recommendationimage1"
                           android:text="\@birdfact"
                           android:drawableRight="@drawable/tick"
                           android:textStyle="bold"
                           android:id="@+id/companyname1"
                           android:drawablePadding="5dp"
                           android:gravity="center"
                           android:layout_marginTop="20dp"
                           android:textColor="@android:color/black"
                           android:layout_height="wrap_content">

                       </TextView>
                       <TextView
                           android:layout_width="wrap_content"
                           android:id="@+id/profession1"
                           android:layout_below="@+id/recommendationimage1"
                           android:text="Carpenter"
                           android:drawableLeft="@drawable/work"
                           android:drawablePadding="10dp"
                           android:layout_marginLeft="10dp"
                           android:textColor="@android:color/black"
                           android:layout_height="wrap_content">

                       </TextView>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_below="@+id/profession1"
                           android:text="150/hr"
                           android:id="@+id/comission1"
                           android:layout_marginTop="5dp"
                           android:drawableLeft="@drawable/money"
                           android:drawablePadding="10dp"
                           android:layout_marginLeft="10dp"
                           android:layout_height="wrap_content">

                       </TextView>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_below="@+id/comission1"
                           android:text="KannyaKumari"
                           android:id="@+id/location1"
                           android:layout_marginTop="5dp"

                           android:drawableLeft="@drawable/location"
                           android:drawablePadding="10dp"
                           android:layout_marginLeft="10dp"
                           android:layout_height="wrap_content">

                       </TextView>
                       <Button
                           android:layout_width="match_parent"
                           android:layout_height="40dp"
                           android:id="@+id/applynow1"
                           android:background="#25854C"
                           android:text="Completed"
                           android:textColor="@android:color/white"
                           android:layout_alignParentBottom="true"/>



                   </RelativeLayout>


               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   app:cardCornerRadius="10dp"
                   android:layout_margin="10dp"
                   app:cardElevation="5dp"
                   android:layout_height="200dp">
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <TextView
                           android:layout_width="wrap_content"
                           android:text="150 rs"
                           android:textColor="#25854C"
                           android:textStyle="bold"
                           android:layout_alignParentEnd="true"
                           android:textSize="40dp"
                           android:layout_margin="50dp"
                           android:layout_height="wrap_content"
                           android:layout_alignParentRight="true">

                       </TextView>

                       <ImageView
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:elevation="10dp"
                           android:layout_margin="10dp"
                           android:src="@drawable/employ"
                           android:adjustViewBounds="true"
                           android:scaleType="fitCenter"
                           android:id="@+id/recommendationimage"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_toRightOf="@+id/recommendationimage"
                           android:text="\@birdfact"
                           android:drawableRight="@drawable/tick"
                           android:textStyle="bold"
                           android:id="@+id/companyname"
                           android:drawablePadding="5dp"
                           android:gravity="center"
                           android:layout_marginTop="20dp"
                           android:textColor="@android:color/black"
                           android:layout_height="wrap_content">

                       </TextView>
                       <TextView
                           android:layout_width="wrap_content"
                           android:id="@+id/profession"
                           android:layout_below="@+id/recommendationimage"
                           android:text="Carpenter"
                           android:drawableLeft="@drawable/work"
                           android:drawablePadding="10dp"
                           android:layout_marginLeft="10dp"
                           android:textColor="@android:color/black"
                           android:layout_height="wrap_content">

                       </TextView>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_below="@+id/profession"
                           android:text="150/hr"
                           android:id="@+id/comission"
                           android:layout_marginTop="5dp"
                           android:drawableLeft="@drawable/money"
                           android:drawablePadding="10dp"
                           android:layout_marginLeft="10dp"
                           android:layout_height="wrap_content">

                       </TextView>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_below="@+id/comission"
                           android:text="KannyaKumari"
                           android:id="@+id/location"
                           android:layout_marginTop="5dp"

                           android:drawableLeft="@drawable/location"
                           android:drawablePadding="10dp"
                           android:layout_marginLeft="10dp"
                           android:layout_height="wrap_content">

                       </TextView>
                       <Button
                           android:layout_width="match_parent"
                           android:layout_height="40dp"
                           android:id="@+id/applynow"
                           android:background="#25854C"
                           android:text="Completed"
                           android:textColor="@android:color/white"
                           android:layout_alignParentBottom="true"/>



                   </RelativeLayout>


               </androidx.cardview.widget.CardView>

           </LinearLayout>






        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>