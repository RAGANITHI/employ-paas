<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="130dp"
                android:src="@drawable/employ"
                android:id="@+id/srcimg"
                android:layout_height="130dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/freelancername"
                android:layout_toRightOf="@id/srcimg"
                android:text="faheem jinna"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/freelancerwork"
                android:drawableLeft="@drawable/work"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:layout_toRightOf="@id/srcimg"
                android:layout_below="@+id/freelancername"
                android:text="faheem jinna"

                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/freelancerwages"
                android:drawableLeft="@drawable/money"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:layout_toRightOf="@id/srcimg"
                android:layout_below="@+id/freelancerwork"
                android:text="150 per day"

                android:layout_margin="5dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/freelancerwages"
                android:background="@drawable/login_buton"
                android:id="@+id/more"
                android:text="More"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/srcimg"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/freelancerwages"
                android:background="@drawable/bottom_design"
                android:text="Hire"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/more"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>